        <div class="chart">
            <!-- Dynamically filled bars -->
            <div class="bar" id="bar-1"></div>
            <div class="bar" id="bar-2"></div>
            <div class="bar" id="bar-3"></div>
            <div class="bar" id="bar-4"></div>
            <div class="bar" id="bar-5"></div>
            <div class="bar" id="bar-6"></div>
            <div class="bar" id="bar-7"></div>
        </div>
        <div class="week-labels">
            <div class="week-label">Week 1</div>
            <div class="week-label">Week 2</div>
            <div class="week-label">Week 3</div>
            <div class="week-label">Week 4</div>
            <div class="week-label">Week 5</div>
            <div class="week-label">Week 6</div>
            <div class="week-label">Week 7</div>
        </div>
    </div>

    <script>
        // Get the workout data dynamically from Adalo
        const workoutData = [
            {{week_1_workout_count}}, 
            {{week_2_workout_count}}, 
            {{week_3_workout_count}}, 
            {{week_4_workout_count}}, 
            {{week_5_workout_count}}, 
            {{week_6_workout_count}}, 
            {{week_7_workout_count}}
        ];

        const bars = document.querySelectorAll('.bar');

        // Loop through the bars and set their heights based on the workout data
        bars.forEach((bar, index) => {
            const heightPercentage = (workoutData[index] / 10) * 100; // Assuming max is 10
            bar.style.height = `${heightPercentage}%`;
            bar.setAttribute('title', `Week ${index + 1}: ${workoutData[index]} Workouts`);
        });
    </script>
